<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-lable text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-contol shadow mb-3 rounded", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-lable text-light" %>
          <div class="col-10">
            <%= form.textarea :description, rows: 10, class: "form-control shadow mb-3 rounded", placeholder: "Description of Article" %>
          </div>
        </div>

        <div class="form-group row-1 justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to "Back to articles", articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>